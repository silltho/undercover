{
  "name": "webapp",
  "private": true,
  "scripts": {
    "build": "./bin/webpack",
    "build:production": "NODE_ENV=production ./bin/webpack",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "lint": "eslint app/javascript/**/*.jsx app/javascript/**/*.js --fix",
    "precommit": "yarn lint",
    "prepush": "yarn test"
  },
  "jest": {
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/app/javascript/config/testSetup.js",
    "setupFiles": [
      "raf/polyfill"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "moduleNameMapper": {
      ".(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/app/javascript/config/fileStub.js",
      ".(scss)$": "<rootDir>/app/javascript/config/styleStub.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "app/javascript/**/*.{js,jsx}",
      "!**/app/javascript/sw.js",
      "!**/app/javascript/packs/**",
      "!**/app/javascript/config/**",
      "!**/app/javascript/services/**",
      "!**/app/javascript/containers/**",
      "!**/app/javascript/**/Styles.js",
      "!**/app/javascript/components/Animations/**",
      "!**/app/javascript/components/EasterEggs/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "testMatch": [
      "**/app/javascript/**/tests/**/*.(spec|test).js?(x)"
    ]
  },
  "dependencies": {
    "@rails/webpacker": "^3.4.3",
    "actioncable": "^5.2.0",
    "babel-eslint": "7",
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "hammerjs": "^2.0.8",
    "html-loader": "^0.5.5",
    "immutable": "^3.8.2",
    "node-sass": "^4.9.0",
    "nosleep.js": "^0.7.0",
    "null-loader": "^0.1.1",
    "postcss-smart-import": "^0.7.6",
    "prop-types": "^15.6.0",
    "react": "16.2.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "16.2.0",
    "react-fontawesome": "^1.6.1",
    "react-modal": "^3.4.4",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "sass-loader": "^6.0.7",
    "styled-components": "^2.2.1",
    "turn.js": "^1.0.5",
    "url-loader": "^1.0.1",
    "webpack": "^3.10.0",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "devDependencies": {
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "path": "^0.12.7",
    "webpack-dev-server": "^2.9.2",
    "workbox-webpack-plugin": "^3.2.0"
  }
}
