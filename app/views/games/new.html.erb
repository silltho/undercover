<h1>Start a new Game</h1>

<%= form_for @game do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
    <%= f.hidden_field :user_id, value: cookies.signed[:user_id] %>
  </div>

  <%= f.submit "Start!" %>
<% end %>
<br>
<%= link_to "back to Lobby", games_path %>