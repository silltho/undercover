<% session[:foo] = "bar" if session.id.nil? %>

<main role='main' class='content'>
  <div class='main-content'>

    <div class='play-game-button-container'>
      <%= link_to '/app', class: 'play-game-button' do %>PLAY
      <% end %>
    </div>

    <div class='town-video-container'>
      <%= video_tag('town_1024p.mp4', poster: 'game/town.jpg', type: 'video/mp4;codecs="avc1.42E01E, mp4a.40.2"', controls: false, autobuffer: true, autoplay: true, loop: true, muted: true, class: 'town-video') %>
    </div>

  </div>

  <div class="ruleset-navigation" data-turbolinks="false">
    <%= link_to '/gameplay', class: 'ruleset-link' do %>
        <%= image_tag('icons/infobook.svg', class: 'infobook') %>
    <% end %>
  </div>

  <div id="audio-control">
    <%= image_tag('icons/volume-up.svg', id: 'volume-icon-up', class: 'hide volume-icon') %>
    <%= image_tag('icons/volume-off.svg', id: 'volume-icon-off', class: 'volume-icon') %>
  </div>

</main>

<%= audio_tag('soundtrack.ogg', id: 'soundtrack', controls: false, loop: true) %>
<%= audio_tag('start.ogg', id: 'playsound', controls: false) %>

<%= init_audio %>
