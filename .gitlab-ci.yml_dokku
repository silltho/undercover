before_script:
  - 'which ssh-agent || ( apt-get update -y && apt-get install openssh-client -y )'
  - eval $(ssh-agent -s)
  - echo "$SSH_PRIVATE_KEY" | tr -d '\r' | ssh-add - > /dev/null
  - ssh-add -l
  - git remote add dokku ssh://dokku@46.38.235.104/undercover.gg

stages:
  - deploy

deploy_to_dokku:
  only:
    - production
  stage: deploy
  script:
    - git push dokku master -f
    - dokku run rails db:migrate
    - dokku run rails db:seed

